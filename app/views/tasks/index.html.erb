<h1>My Tasks</h1>
<ul class="list">
<% @tasks.each do |task| %>
<li class="py-2"><%= link_to task.title, task_path(task.id) %>
<%= link_to "✖️",   task_path(task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</li>
<% end %></ul>

<%= link_to 'Add a new task', new_task_path %>
